<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinicial"
    tools:context=".Usuarios.Pantalla_Inicio">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/magicblanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/iniciar_sesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:textSize="25dp"
        android:padding="20dp"
        android:layout_marginBottom="15dp"
        android:textAllCaps="false"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/gradient_button"
        android:textColor="@color/white"
        android:fontFamily="@font/newbeleren"
        app:layout_constraintBottom_toTopOf="@+id/registrarse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registrarse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Registrarse"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:padding="20dp"
        android:fontFamily="@font/newbeleren"
        android:backgroundTint="@color/white"
        android:textColor="@color/naranja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iniciar_sesion"
        app:layout_constraintStart_toStartOf="@+id/iniciar_sesion" />
</androidx.constraintlayout.widget.ConstraintLayout>